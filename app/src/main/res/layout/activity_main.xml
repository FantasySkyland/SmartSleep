<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f3f3f5"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/blurBG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp">

                    <FrameLayout
                        android:id="@+id/ll_nologin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <!--<com.taiqudong.android.careforwomen.view.CircleImageView-->
                            <!--android:id="@+id/civ_mrtx"-->
                            <!--android:layout_width="130dp"-->
                            <!--android:layout_height="130dp"-->
                            <!--android:layout_gravity="center_horizontal"-->
                            <!--android:layout_marginTop="26dp"-->
                            <!--android:src="@drawable/default_error_avart"/>-->
                        <ImageView
                        android:id="@+id/civ_mrtx"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="26dp"
                        android:src="@drawable/default_error_avart"/>

                        <TextView
                            android:id="@+id/tv_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="139dp"
                            android:maxLines="1"
                            android:text="ID:Enayeh123"
                            android:textColor="#898c98"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/tv_login"
                            android:layout_width="152dp"
                            android:layout_height="58dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="162dp"
                            android:background="@drawable/personal_login"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="登陆"
                            android:textColor="@color/colorTextWhite"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/ll_yeslogin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="49dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:id="@+id/rl_avatar"
                                    android:layout_width="63dp"
                                    android:layout_height="63dp"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center"
                                    android:background="@drawable/userinfo_avart_circle">

                                    <!--<com.taiqudong.android.careforwomen.view.CircleImageView-->
                                        <!--android:id="@+id/civ_icon"-->
                                        <!--android:layout_width="58dp"-->
                                        <!--android:layout_height="58dp"-->
                                        <!--android:layout_centerInParent="true"-->
                                        <!--android:src="@drawable/default_error_avart" />-->
                                    <ImageView
                                        android:id="@+id/civ_icon"
                                        android:layout_width="58dp"
                                        android:layout_height="58dp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/default_error_avart" />
                                </RelativeLayout>

                                <ImageView
                                    android:id="@+id/iv_sign"
                                    android:layout_width="88dp"
                                    android:layout_height="88dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true" />

                            </RelativeLayout>


                        </FrameLayout>

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="VInema"
                            android:textColor="#333333"
                            android:textSize="14sp" />
                        <!--个人主页功能区-->
                        <LinearLayout
                            android:id="@+id/ll_function"
                            android:layout_width="249dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_share"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginRight="6dp"
                                android:src="@drawable/icon_share"
                                android:visibility="gone" />

                            <Button
                                android:id="@+id/btn_edit"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:background="@drawable/person_edit_bg"
                                android:gravity="center"
                                android:text="个人信息"
                                android:textColor="#333333"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/messageTip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/aboutUsRowHeight"
                android:layout_marginTop="@dimen/personalCenterRowMargin"
                android:background="@color/colorWhite">

                <ImageView
                    android:layout_width="@dimen/aboutUsRowIconWidth"
                    android:layout_height="@dimen/aboutUsRowIconWidth"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/aboutUsMargin"
                    android:layout_weight="0"
                    android:src="@drawable/personal_alert" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/aboutUsMargin"
                    android:layout_weight="1"
                    android:text="闹钟"
                    android:textColor="#333333"
                    android:textSize="14sp" />


                <ImageView
                    android:layout_width="@dimen/aboutUsRowArrowWidth"
                    android:layout_height="@dimen/aboutUsRowArrowHeight"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/aboutUsMargin"
                    android:layout_weight="0"
                    android:src="@drawable/ic_chevron_left_24dp_huise" />
            </LinearLayout>

   </LinearLayout>
</LinearLayout>
